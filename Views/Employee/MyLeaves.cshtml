@model List<RecruitmentSystem.Models.LeaveRequest>

<h2>My Leaves</h2>
<hr />

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

@if (Model.Count == 0)
{
    <p>No leave requests found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Admin Comment</th>
                <th>Applied On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var leave in Model)
            {
                <tr>
                    <td>@leave.FromDate.ToString("dd-MMM-yyyy")</td>
                    <td>@leave.ToDate.ToString("dd-MMM-yyyy")</td>
                    <td>@leave.Reason</td>
                    <td>
                        @if (leave.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (leave.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>@leave.AdminComment</td>
                    <td>@leave.AppliedAt.ToString("dd-MMM-yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Dashboard" class="btn btn-secondary">Back</a>
