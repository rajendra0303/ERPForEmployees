<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERPForEmployees</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ERPForEmployees.styles.css" asp-append-version="true" />
</head>
<body>
    <style>
        .app-header {
            border-bottom: 1px solid #e5e7eb;
            background: #fff;
            padding: 14px 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .app-brand {
            font-weight: 800;
            letter-spacing: .08em;
            text-transform: uppercase;
            color: #0f172a;
            margin: 0;
        }

        .app-logout {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
        }

        .app-main {
            width: 100%;
            padding: 0;
        }
    </style>

    <header class="app-header">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
            <h4 class="app-brand mb-0">ERPForEmployees</h4>
        </a>
        @if (Context.Session.GetInt32("UserId") != null)
        {
            <a class="app-logout nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
        }
    </header>

    <div class="container-fluid app-main">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2026 - ERPForEmployees
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
